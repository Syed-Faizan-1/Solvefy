@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient text-light py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white text-uppercase">@Model.Name</h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="py-3">
            <div class="row">
                <div class="col-6 col-md-2 offset-lg-1 pb-1">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                        <small>Back to home</small>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-lg-6 offset-lg-1">
                    <div class="row ps-2">
                        <p class="text-dark"><strong>Description: </strong> @Model.Description</p>
                    </div>
                    <div class="row ps-2">
                        <p class="text-dark">
                            <strong>Price: </strong>
                            <span>
                                @Model.Price.ToString("c")
                            </span>
                        </p>
                    </div>
                    <div class="row ps-2">
                        <p class="text-dark"><strong>Quantity: </strong> @Model.Quantity</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
