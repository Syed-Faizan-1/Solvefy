@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        @* <img src="product.ImageUrl" class="card-img-top rounded"/> *@
                        <div class="pl-1">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center"><strong>@product.Name</strong></p>
                            <p class="card-title h5 text-warning">@product.Description</p>
                            <p class="card-title h5 text-dark opacity-75"><strong>Price: </strong>@product.Price.ToString("c")</p>
                            <p class="card-title h5 text-dark opacity-75"><strong>Quantity: </strong>@product.Quantity</p>
                        </div>
                        <div>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" class="btn btn-secondary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
