@model Product

<form method="post">
    <div class="border p-3">
        <input type="hidden" asp-for="Id" />
        <div class="row p-3 mt-4">
            <h2>Delete Product</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="mb-3"></label>
             <input asp-for="Name" class="form-control" disabled />        
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="mb-3"></label>
            <input asp-for="Description" class="form-control" disabled />

        </div>
        <div class="mb-3">
            <label asp-for="Price" class="mb-3"></label>
            <input asp-for="Price" class="form-control" disabled/>

        </div>
        <div class="mb-3">
            <label asp-for="Quantity" class="mb-3"></label>
            <input asp-for="Quantity" class="form-control" disabled />

        </div>
        <div class="row mt-4">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

